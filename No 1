


import socket

def simple_port_scanner(target_ip):
    print(f"Scanning target: {target_ip}")
    for port in range(1, 1025):  # You can limit or expand this range
        try:
            sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
            sock.settimeout(0.5)
            result = sock.connect_ex((target_ip, port))
            if result == 0:
                print(f"Port {port} is OPEN")
            sock.close()
        except KeyboardInterrupt:
            print("Scan aborted.")
            break
        except socket.error:
            print("Could not connect.")
            break
